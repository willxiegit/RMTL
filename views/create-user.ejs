<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RMTL | Create User </title>
    <link rel="icon" href="icon.png">
    <link rel="stylesheet" href="create-user.css">
</head>
<body>
    <header>
        <div class="navbar">
            <div id="logo">
                <a href="manager-homepage"><img src="RMTL-logo.png"></a>
            </div>
            <nav>
                <ul>
                    <li><a href="manager-homepage">Home</a></li>
                    <li><a href="manager-booking">Bookings</a></li>
                    <li><a href="manager-report-issues">Report Issues</a></li>
                    <li><a href="manager-profile">Profile</a></li>
                    <li><a href="manager-reports">Reports</a></li>
                    <li><a href="manager-projects">Projects</a></li>
                    <li><a class="current" href="manager-users">Users</a></li>
                    <li><a href="manager-email">Emails</a></li>
                    <li><a href="manager-logs">Logs</a></li>
                    <li><a href="manager-equipment">Equipment</a></li>
                    <li>
                        <a>
                            <form action="logout" method="get">
                                <button type="submit" class="logout-btn">Logout</button>
                            </form>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>     
    </header>
    <br>
    <div class="container">
        
        <h1>Create User</h1> 
        
        <form action="create-user" method="post">
            
            <label for="firstname">First name</label>
            <input type="text" class="text-input" name="firstname" placeholder="Enter First name" maxlength="50" required>
        
            <label for="lastname">Last name</label> 
            <input type="text" class="text-input" name="lastname" placeholder="Enter Last name" maxlength="50" required>
        
            <label for="email"> Email </label>
            <input type="text" class="text-input" name="email" placeholder="Enter Email" maxlength="50" required>
        
            <label for="username"> Username </label>
            <input type="text" class="text-input" name="username" placeholder="Enter username" maxlength="25" required>
        
            <label for="password">Temporary Password</label> 
            <input type="text" class="text-input" name="password" placeholder="Enter temporary password" maxlength="50" required>
        
            <label for="training"> Training </label>    
            <select id="training" name="training" class="selectBox" multiple required>
                <% for (var i = 0; i < training.length; i++) { %>
                    <option><%= training[i].groupName %></option>
                <% } %>
            </select>
            
            <label for="projects"> Projects </label>
            <select id="projects" name="projects" class="selectBox" multiple required>
                <% for (var j = 0; j < project.length; j++) { %>
                    <option><%= project[j].projectName %></option>
                <% } %>
            </select>
            
            <button type="submit" class="button-1" value="submit"> Submit </button>
        </form>
    </div>  
</body>
</html>
